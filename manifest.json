{
  "manifest_version": 3,
  "name": "Remove Cookies For Site",
  "version": "1.7",
  "description": "A Chrome extension to remove all cookies for the current site.",
  "permissions": ["cookies"],
  "host_permissions": [ "*://*/*" ],
  "background": {
    "service_worker": "cookie_handler.js"
  },
  "icons": {
    "48": "broken-cookie48.png",
    "128": "broken-cookie128.png"
  },
  "action": {
    "default_icon": {
      "48": "broken-cookie48.png",
      "128": "broken-cookie128.png"
    }
  }
}
